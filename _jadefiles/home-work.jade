include ../_jademixins/mixins

#projects
  .row
    .small-12.columns
      +sectiontitle('Projects')

  .row
    .small-12.columns.work-wrap
      ul.work-wheel
        {% for proj in site.data.work %}

        li.work-item
          img(src='{{ proj.image }}')

        {% endfor %}

  .work-content-wrap
    {% for proj in site.data.work %}
    .row.work-content-item.to-right
      .small-12.medium-4.large-4.columns.work-details
        h4 {{ proj.title }}
        h6.subheader {{ proj.role }}
        .row
          .small-6.medium-12.columns
            p.date {{ proj.date }}
          .small-6.medium-12.columns
            a(href="{{ proj.url }}").visit-site visit website

      .small-12.medium-8.large-7.columns.work-description
        {% for para in proj.info %}
        p.smaller {{ para }}
        {% endfor %}


    {% endfor %}

.row: hr
